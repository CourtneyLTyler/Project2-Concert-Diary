<p class="card">
  {{> 'concert'}}
</p>

{{#if comments.length}}
  {{#each comments}}
    <div class="comment-card">
      <div class="comment-content">
        <p class="comment-text">
          <span class="comment-prop">comment: </span>{{ content }}
        </p>
      </div>
      <div class="comment-info">
        <a class="comment-username" href="/user/{{ author.id }}" class="">{{ author.username }}</a>
        <span class="concert__date">{{ createdAt }}</span>
      </div>
    </div>
  {{/each}}
{{/if}}

<div class="addcomment">
  <div class="addcomment-content">
    <h4 class="addcomment-prompt">Add a comment:</h4>
    <form method="POST" action="/concert/{{id}}?_method=PUT" class="row">
      <p class="input-field inline col s100">
        <label for="content"></label>
        <input type="text" name="content" placeholder="..." class="comment-textbox">
      </p>
      <p class="input-field inline col s2 addcomment-btn">
        <input class="btn" type="submit" value="Submit">
      </p>
    </form>
  </div>
</div>
